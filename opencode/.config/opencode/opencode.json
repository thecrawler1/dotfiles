{
  "$schema": "https://opencode.ai/config.json",
  "plugin": ["oh-my-opencode"],
  "provider": {
    "proxy": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Proxy",
      "options": {
        "baseURL": "http://127.0.0.1:8000/v1",
        "apiKey": "sk-your-secure-proxy-key-1234567890abcdef",
        "timeout": 300000
      },
      "models": {
        "claude-opus-4-5": {
          "id": "antigravity/claude-opus-4-5",
          "name": "Claude Opus 4.5"
        },
        "claude-sonnet-4-5": {
          "id": "antigravity/claude-sonnet-4-5",
          "name": "Claude Sonnet 4.5"
        },
        "gemini-3-pro": {
          "id": "antigravity/gemini-3-pro-preview",
          "name": "Gemini 3 Pro"
        },
        "gemini-2.5-flash": {
          "id": "gemini_cli/gemini-2.5-flash",
          "name": "Gemini 2.5 Flash"
        },
        "gpt-5.2": {
          "id": "openrouter/openai/gpt-5.2",
          "name": "GPT 5.2"
        }
      }
    }
  },
  "permission": {
    "bash": {
      "*": "ask",
      "git status": "allow",
      "git diff": "allow",
      "ls": "allow",
      "find": "allow",
      "pwd": "allow",
      "git log": "allow",
      "git branch": "allow",
      "git show": "allow",
      "cat": "allow",
      "head": "allow",
      "tail": "allow",
      "wc": "allow",
      "du": "allow",
      "df": "allow",
      "flutter doctor": "allow",
      "flutter devices": "allow",
      "flutter --version": "allow",
      "flutter pub deps": "allow",
      "flutter test": "allow",
      "flutter analyze": "allow",
      "dart --version": "allow",
      "dart pub deps": "allow",
      "dart analyze": "allow",
      "dart format": "allow"
    },
    "read": {
      "*": "allow"
    }
  }
}

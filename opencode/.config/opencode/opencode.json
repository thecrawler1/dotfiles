{
  "$schema": "https://opencode.ai/config.json",
  "plugin": ["oh-my-opencode"],
  "provider": {
    "proxy": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "LLM Proxy",
      "options": {
        "baseURL": "http://127.0.0.1:8000/v1"
      }
    }
  },
  "permission": {
    "bash": {
      "*": "ask",
      "git status": "allow",
      "git diff": "allow",
      "ls": "allow",
      "find": "allow",
      "pwd": "allow",
      "git log": "allow",
      "git branch": "allow",
      "git show": "allow",
      "cat": "allow",
      "head": "allow",
      "tail": "allow",
      "wc": "allow",
      "du": "allow",
      "df": "allow",
      "flutter doctor": "allow",
      "flutter devices": "allow",
      "flutter --version": "allow",
      "flutter pub deps": "allow",
      "flutter test": "allow",
      "flutter analyze": "allow",
      "dart --version": "allow",
      "dart pub deps": "allow",
      "dart analyze": "allow",
      "dart format": "allow"
    },
    "read": {
      "*": "allow"
    }
  }
}
